@model IEnumerable<MyStorage.Core.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Categories</h2>

<p>
    @Html.ActionLink("Add New Category", "Create", "Categories")
</p>

<table id="category-table" class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td class="text-middle">@category.Id</td>
                <td class="text-middle">@category.Name @String.Format("({0})", category.CategoryTypes.Count)</td>
            <td>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Categories", new {id = category.Id})">
                    <span class="glyphicon glyphicon-pencil"></span>
                    Edit
                </a>
                <a class="btn btn-info btn-sm" href="@Url.Action("ListCategoryTypes", "Categories", new { id = category.Id })">
                    <span class="glyphicon glyphicon-list"></span>
                    List Types
                </a>
                <a class="btn btn-danger btn-sm" href="#">
                    <span class="glyphicon glyphicon-trash"></span>
                    Remove
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#category-table").DataTable();
        });
    </script>
}
