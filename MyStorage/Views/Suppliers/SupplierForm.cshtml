@model MyStorage.Core.ViewModels.SupplierFormViewModel

@{
    ViewBag.Title = "SupplierForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{
    <h2>Create New Supplier</h2>
}
else
{
    <h2>Update Supplier Info</h2>
}

@using (Html.BeginForm("Save", "Suppliers"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
        @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Phone)
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
}

